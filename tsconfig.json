{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./lib",
    "lib": ["dom", "es5", "scripthost", "es2015", "es2016", "es2017"]
  },
  "files": [
    "src/app/index.ts",
    "src/app/drivers/lifecycle.ts",
    "src/app/drivers/toast.ts",
    "src/nodejs-project/index.ts",
    "src/nodejs-project/loader.ts",
    "src/nodejs-project/manifest.ts",
    "src/typings/react-native-dialogs.d.ts",
    "src/typings/rn-viewpager.d.ts"
  ],
  "exclude": ["node_modules"]
}
